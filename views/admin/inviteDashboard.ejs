
<%-include("../includes/adminHeader")%>
<div class="text-center py-8 flex justify-center" >
  <h1 class="text-2xl font-semibold text-white">All Invitations<span class="text-emerald-300 font-bold"></span></h1>
  <!-- <p class="text-sm text-emerald-200 mt-2">Manage and monitor all tasks assigned to employees</p> -->
   <button class="bg-emerald-500 py-1 px-3 rounded mx-3" onclick="window.location.href='/admin/invite'">Send Invite</button>
</div>

<!-- Task Table -->
<div class="w-full max-w-7xl mx-auto px-4 overflow-x-auto">
  <table
    class="w-full table-auto backdrop-blur-md bg-white/5 border border-white/20 rounded-xl overflow-hidden shadow-lg">
    <thead class="bg-white/10 border-b border-white/20 text-emerald-300 uppercase text-sm tracking-wide">
      <tr>
        <th class="text-left px-6 py-4">Email</th>
        <th class="text-left px-6 py-4">team Name</th>
        <th class="text-left px-6 py-4">Expires In</th>
        <th class="text-left px-6 py-4">Invite Sent</th>
        <th class="text-left px-6 py-4">Accepted</th>
        <th class="text-left px-6 py-4">Actions</th>
      </tr>
    </thead>
    <tbody class="text-white text-sm divide-y divide-white/10">

      <!-- Task Row -->
      <% invites.forEach((invite)=>{%>
        <tr class="hover:bg-white/10 transition">
          <td class="px-6 py-4 font-medium">
            <%=invite.email%>
          </td>
          <td class="px-6 py-4">
            <%=team.name%>
          </td>
          <td class="px-6 py-4">
            <%=invite.remaining%>
          </td>
          <td class="px-6 py-4 ">
                <%if(invite.emailSent===true){%>
                    <!-- <span class="bg-green-500 text-white text-xs px-3 py-1 rounded-full"> -->
                        Yes
                    <!-- </span> -->
                <%}else{%>
                    <!-- <span class="bg-red-500 text-white text-xs px-3 py-1 rounded-full"> -->
                        No
                    <!-- </span> -->
                <%}%>
          </td>
          <td class="px-6 py-4">
                <%if(invite.used===true){%>
                    <!-- <span class="bg-green-500 text-white text-xs px-3 py-1 rounded-full"> -->
                        Yes
                    <!-- </span> -->
                <%}else{%>
                    <!-- <span class="bg-red-500 text-white text-xs px-3 py-1 rounded-full"> -->
                        No
                    <!-- </span> -->
                <%}%>
          </td>
          <td class="px-6 py-4 space-x-2 flex">
            <!-- <button class="bg-yellow-500 text-white text-xs px-3 py-1 rounded-full hover:bg-yellow-600 transition"
              onclick="window.location.href='/admin/task/edit/'">Edit</button> -->
              <form action="/admin/invite/<%=invite._id%>?_method=DELETE" method="post" onsubmit="return confirm('Are you sure to Delete!')">
                <button
                  class="bg-red-500 text-white text-xs px-3 py-1 rounded-full hover:bg-red-600 transition">Delete</button>
              </form>
          </td>
        </tr>
        <%})%>


    </tbody>
  </table>
</div>
