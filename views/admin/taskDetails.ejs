<%- include("../includes/adminHeader") %>

<!-- Page Header -->
<div class="text-center py-10">
  <h1 class="text-3xl font-bold text-white">Task Details</h1>
  <p class="text-sm text-emerald-200 mt-2">Full information about the selected task</p>
</div>

<!-- Task Detail Card -->
<div class="max-w-4xl mx-auto px-6 mb-3">
  <div class="bg-white/5 backdrop-blur-lg border border-white/20 rounded-xl p-8 shadow-lg text-white space-y-6">

    <!-- Title & Description -->
    <div>
      <h2 class="text-xl font-semibold text-emerald-300 mb-1"><%=task.title.toUpperCase()%></h2>
      <p class="text-sm text-gray-300"><%=task.description%></p>
    </div>

    <!-- Info Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- Dates -->
      <div>
        <p class="text-sm text-emerald-200">Date:</p>
        <p class="text-base font-medium"><%=task.date%></p>
      </div>
      <div>
        <p class="text-sm text-emerald-200">Due Date:</p>
        <p class="text-base font-medium"><%=task.dueDate%></p>
      </div>
      <div>
        <p class="text-sm text-emerald-200">Created At:</p>
        <p class="text-base font-medium"><%=task.createdAt%></p>
      </div>
      <div>
        <p class="text-sm text-emerald-200">Updated At:</p>
        <p class="text-base font-medium"><%=task.updatedAt%></p>
      </div>

      <!-- Status Info -->
      <div>
        <p class="text-sm text-emerald-200">Status:</p>
        <span class="bg-blue-500 text-white text-xs px-3 py-1 rounded-full font-semibold">
          <%=task.status.toUpperCase()%>
        </span>
      </div>
      <div>
        <p class="text-sm text-emerald-200">Category:</p>
        <p class="text-base font-medium"><%=task.category.toUpperCase()%></p>
      </div>

      <!-- Optional Timestamps -->
      
      <div>
        <p class="text-sm text-emerald-200">Accepted At:</p>
        <p class="text-base font-medium">
          <%if(task.acceptedAt===null){%>
            Not Accepted Yet
          <%}else{%>
            <%=task.acceptedAt%>
          <%}%>
        </p>
      </div>
      <%if(task.acceptedAt !==null && task.completedAt === null && task.failedAt === null){%>
        <div>
          <p class="text-sm text-emerald-200">Completed At:</p>
          <p class="text-base font-medium">Not Completed Yet</p>
        </div>
      <%}else if(task.completedAt !==null){%>
        <div>
          <p class="text-sm text-emerald-200">Completed At:</p>
          <p class="text-base font-medium"><%=task.completedAt%></p>
        </div>
      <%}else if(task.failedAt !== null){%>
        <div>
          <p class="text-sm text-emerald-200">Failed At:</p>
          <p class="text-base font-medium"><%=task.failedAt%></p>
        </div>
      <%}%>

      <!-- Metadata -->
      <div>
        <p class="text-sm text-emerald-200">Task ID:</p>
        <p class="text-xs text-gray-400 break-all"><%=task._id%></p>
      </div>
      <div>
        <p class="text-sm text-emerald-200">Assigned User ID:</p>
        <p class="text-xs text-gray-400 break-all"><%=task.userId%></p>
      </div>

    </div>

    <!-- Action Buttons -->
    <div class="flex justify-end gap-4 pt-6">
      <a href="#" class="bg-yellow-500 hover:bg-yellow-600 px-4 py-2 rounded text-white text-sm font-medium transition">Edit Task</a>
      <a href="#" class="bg-gray-600 hover:bg-gray-700 px-4 py-2 rounded text-white text-sm font-medium transition">Back</a>
    </div>

  </div>
</div>
